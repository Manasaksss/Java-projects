	book.setPrice(price);
	System.out.println("Book Number : "+book.getBookNo());
	System.out.println("Book Title : "+book.getTitle());
	System.out.println("Book Author :"+book.getAuthor());
	System.out.println("Book Price :" +book.getPrice());
